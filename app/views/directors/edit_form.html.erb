<h1>Edit Director</h1>

<form action: "http://localhost:3000/update_director/:id">
<div>
    <label for="director_name">Name:</label>
    <input id="director_name" type="text" name="name" value="<%= @director.name %>" >
  </div>
  <div>
    <label for="director_bio">Bio:</label>
    <input id="director_bio" type="text" name="bio" value="<%= @director.bio %>">
  </div>
  <div>
    <label for="director_dob">DOB:</label>
    <input id="director_dob" type="text" name="dob" value="<%= @director.dob %>">
  </div>
  <div>
    <label for="director_image_url">Image URL:</label>
    <input id="director_image_url" type="text" name="image" value="<%= @director.image_url %>">
  </div>
  <div>
    <button>Update Director</button>
  </div>
</form>
